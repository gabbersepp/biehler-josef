<div class="drawing-tile tile{{entry.id}}">
    <div class="img"><img src="{{ entry.mediaUrl }}" loading="lazy"></div>
    <div class="description">{{ entry.fullText }}</div>
</div>

<script>
    document.querySelector(".tile{{entry.id}}").addEventListener("click", () => {
        window.open(`https://twitter.com/JosefBiehler/status/{{entry.id}}`, '_blank');
    })
</script>