    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% if pageDescription !== '' %}
        <meta name="description" content="{{ pageDescription }}">
    {% endif %}
    <link rel="stylesheet" href="/index.css">
    
    <title>{{ pageTitle }}</title>
</head>
<body>

    {% if page.url !== "/" %}
    <header>
        <h1>{{ pageTitle }}</h1>
        <div class="hr"></div>
    </header>
    {% endif %}

    <div id="main-content">

        {{ content | safe }}
    
    </div>

    <footer>
    Josef Biehler | Impressum | gabbersepp@googlemail.com
    </footer>
</body>
</html>
